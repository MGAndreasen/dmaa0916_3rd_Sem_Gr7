@using Microsoft.AspNet.Identity
@using Booking.Web.BookingAuthRemote
@using Booking.Web.BookingServiceRemote

<ul class="floatRight">
    <!-- if (Request.IsAuthenticated) -->
    @if(Session["Username"] != null || Session["Password"] != null)
    {
        using (Booking.Web.BookingAuthRemote.AuthClient test = new AuthClient())
        {
            var check = test.Login(Session["Username"].ToString(), Session["Password"].ToString());

            if (check)
            {
                Session["isValidated"] = true;
            }
        }


        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "" }))
        {
            @Html.AntiForgeryToken()
            <li>
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        }
    }
    else
    {
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    }
</ul>